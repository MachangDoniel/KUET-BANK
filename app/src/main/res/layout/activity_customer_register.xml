<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kbbackground"
    tools:context=".CustomerRegister">



        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textColor="@color/newcolor"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.163" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account No:"
                    android:textColor="@color/purple_700" />

                <TextView
                    android:id="@+id/accountno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_rounded"
                    android:hint="  Account No"

                    android:textColor="@color/newcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/purple_700" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_rounded"
                    android:drawableLeft="@drawable/ic_name"
                    android:hint="  Name"

                    android:textColor="@color/newcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/t12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No:"
                    android:textColor="@color/purple_700" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_rounded"
                    android:drawableLeft="@drawable/ic_phone">


                        <EditText
                            android:id="@+id/code"
                            android:layout_width="90dp"
                            android:layout_height="50dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:text="  +880"
                            android:textColor="@color/newcolor"

                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="  Phone Number"
                            android:textColor="@color/newcolor"

                            android:textSize="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/t96"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pin:"
                    android:textColor="@color/purple_700" />

                <EditText
                    android:id="@+id/pin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_rounded"
                    android:drawableLeft="@drawable/ic_security"
                    android:hint="  Pin"

                    android:textColor="@color/newcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth:"
                    android:textColor="@color/purple_700" />

                <EditText
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_rounded"
                    android:drawableLeft="@drawable/ic_date"
                    android:hint="  Date Of Birth"

                    android:textColor="@color/newcolor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/t11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textColor="@color/purple_700" />

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                        <RadioButton
                            android:id="@+id/radioButton21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:checked="false"
                            android:drawableLeft="@drawable/ic_male"
                            android:text="Male"
                            android:textColor="@color/purple_700"
                            android:textSize="15dp"
                            tools:layout_editor_absoluteY="191dp" />

                        <RadioButton
                            android:id="@+id/radioButton22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.13"
                            android:checked="false"
                            android:drawableLeft="@drawable/ic_female"
                            android:text="Female"
                            android:textColor="@color/purple_700"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/radioButton23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.13"
                            android:checked="false"
                            android:drawableLeft="@drawable/ic_gender"
                            android:text="Other"
                            android:textColor="@color/purple_700"
                            android:textSize="15dp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Type:"
                    android:textColor="@color/purple_700" />

                <RadioGroup
                    android:id="@+id/accounttype"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:checked="false"
                            android:text="Checking"
                            android:textColor="@color/purple_700"
                            android:textSize="15dp" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.13"
                            android:checked="false"
                            android:text="Savings"
                            android:textColor="@color/purple_700"
                            android:textSize="15dp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/t23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="@color/purple_700" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bc_rounded"
                    android:drawableLeft="@drawable/ic_address"
                    android:hint="  Address"

                    android:textColor="@color/newcolor"
                    android:textSize="20dp" />


                <Button
                    android:id="@+id/next"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_rounded"
                    android:backgroundTint="@color/green"
                    android:text="Next"
                    android:textSize="15dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>